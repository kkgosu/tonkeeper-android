<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <uikit.widget.HeaderView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:action="@drawable/ic_close_16"
        android:icon="@drawable/ic_chevron_left_16" />

    <uikit.widget.ColumnLayout
        android:id="@+id/top_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/offsetMedium"
        android:background="@drawable/bg_wallet_bubble_no_ripple"
        android:paddingVertical="8dp" />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/TextAppearance.Body3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/offsetMedium"
        android:layout_marginVertical="12dp"
        android:text="@string/pool_details_disclaimer"
        android:textColor="?attr/textTertiaryColor" />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/TextAppearance.H3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/offsetMedium"
        android:layout_marginVertical="14dp"
        android:text="@string/links"
        android:textColor="?attr/textPrimaryColor" />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/social_links"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/offsetMedium"
        app:flexWrap="wrap" />

</androidx.appcompat.widget.LinearLayoutCompat>